<% if !@session %>
  <%= erb :_login_forms %>
<% end %>

<div class="container">
  <% if @session %>
    <%= erb :_nav %>
  <% end %>
  <h1>Recent questions...<br>HARRY POTTER THEMED!</h1>
    <ul>
    <% @questions.each do |question| %>
    <li class = "question_list_item" >Votes: <%= question.votes%> | Answer: <%= question.answers.count %> | <a href="/questions/<%="#{question.id}"%>"><%= question.title %></a> <%= question.author.username %>
    </li>
      <%end%>
  </ul>
</div>
